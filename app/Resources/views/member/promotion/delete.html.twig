{% extends ':member:layout.html.twig' %}

{% trans_default_domain 'member' %}

{% block body %}

    <div id="menu-secondary">
        <h1>{{ 'delete_promotion.title'|trans }}</h1>
        <nav>
            <a href="{{ path('app_member_show',{member:member.id}) }}" class="button">
                <span class="fi-arrow-left"></span>
                {{ 'action.back'|trans({},'messages') }}
            </a>
        </nav>
    </div>

    {{ include('default/_flash_messages.html.twig') }}

    <div class="app_member_promotion_delete">

        <div class="card0">
            <div class="image">
                <img src="{{ path('app_member_photo',{member:member.id}) }}" alt="Photo"/>
            </div>
            <div class="information">
                <div><strong>{{ member }}</strong></div>
                <div>{{ member.age }} {{ 'age'|trans }}</div>
                <div>{{ member.city }}</div>
            </div>
        </div>

        {{ form_start(formDelete) }}

        <div class="edit1">
            {{ form_errors(formDelete) }}
            <div class="notification">
                {{ 'delete_promotion.confirmation'|trans({'%member%':member,'%rank%':promotion.rank,'%date%':promotion.date|localizeddate('full','none')}) }}
            </div>
            <div class="action">
                <button type="submit" class="button error" name="delete">
                    <span class="fi-trash"></span>
                    {{ 'action.delete'|trans({},'messages') }}
                </button>
                <span>or</span>
                <a href="{{ path('app_member_show',{member:member.id}) }}" class="button">
                    <span class="fi-x"></span>
                    {{ 'action.cancel'|trans({},'messages') }}
                </a>
            </div>
        </div>

        {{ form_end(formDelete) }}

    </div>

{% endblock %}