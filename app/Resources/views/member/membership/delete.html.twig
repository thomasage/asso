{% extends ':member:layout.html.twig' %}

{% trans_default_domain 'member' %}

{% block body %}

    <div class="d-flex flex-row justify-content-between">
        <h3>{{ 'delete_membership.title'|trans }}</h3>
        <nav>
            <a href="{{ path('app_member_show',{member:member.id}) }}" class="btn btn-outline-secondary">
                <span class="fi-arrow-left"></span>
                <span class="d-none d-sm-inline">{{ 'action.back'|trans({},'messages') }}</span>
            </a>
        </nav>
    </div>

    {{ include('default/_flash_messages.html.twig') }}

    <div class="app_member_membership_delete">

        <div class="card0">
            <div class="information">
                <div><strong>{{ member }}</strong></div>
                <div>{{ member.age }} {{ 'age'|trans }}</div>
                <div>{{ member.city }}</div>
            </div>
        </div>

        {{ form_start(formDelete) }}

        <div class="edit1">
            {{ form_errors(formDelete) }}
            <div class="notification">
                {{ 'delete_membership.confirmation'|trans({'%member%':member,'%season%':membership.season}) }}
            </div>
            <div class="action">
                <button type="submit" class="btn btn-danger" name="delete">
                    <span class="fi-trash"></span>
                    {{ 'action.delete'|trans({},'messages') }}
                </button>
                <span>or</span>
                <a href="{{ path('app_member_show',{member:member.id}) }}" class="btn btn-outline-secondary">
                    <span class="fi-x"></span>
                    {{ 'action.cancel'|trans({},'messages') }}
                </a>
            </div>
        </div>

        {{ form_end(formDelete) }}

    </div>

{% endblock %}
