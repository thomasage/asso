                    <li class="nav-item{% if 'lesson'==menuActive %} active{% endif %}">
                        <a href="{{ path('app_lesson_index') }}" class="nav-link">{{ 'menu.lesson'|trans }}</a>
                    </li>
                    <li class="nav-item{% if 'accounting'==menuActive %} active{% endif %}">
                        <a href="{{ path('app_accounting_homepage') }}"
                           class="nav-link">{{ 'menu.accounting'|trans }}</a>
                    </li>
                    <li class="nav-item{% if 'stat'==menuActive %} active{% endif %}">
                        <a href="{{ path('app_stat_index') }}" class="nav-link">{{ 'menu.stat'|trans }}</a>
                    </li>
                    <li class="nav-item{% if 'param'==menuActive %} active{% endif %}">
                        <a href="{{ path('app_param_index') }}" class="nav-link">{{ 'menu.param'|trans }}</a>
