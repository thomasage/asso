            </button>
            <div class="collapse navbar-collapse" id="menuPrimary">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item{% if 'dashboard'==menuActive %} active{% endif %}">
                        <a href="{{ path('app_index') }}" class="nav-link">{{ 'menu.dashboard'|trans }}</a>
                    </li>
                    <li class="nav-item{% if 'member'==menuActive %} active{% endif %}">
                        <a href="{{ path('app_member_index') }}" class="nav-link">{{ 'menu.member'|trans }}</a>
